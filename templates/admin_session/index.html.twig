{% extends 'base-admin.html.twig' %}

{% block title %}
	Admin prestations -
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}


{% block body %}
	<h1 class="pageTitle text-primary my-5 fs-1">
		Administration prestations
	</h1>
	<table class="table table-hover bg-light">
		<thead class="bg-primary text-light">
			<tr>
				<th class="fs-4">Titre</th>
				<th>
					<div class="d-flex justify-content-end">
						<a class="btn btn-secondary px-3 py-1 text-light d-flex align-items-center justify-content-center" href="{{ path('admin_category_new') }}">
							<i class="bi bi-plus-circle m-1"></i>Catégorie
						</a>
					</div>
				</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr class="bg-secondary">
					<td class="align-middle fs-4">{{ category.title }}</td>
					<td>
						<div class="d-flex justify-content-end flex-column flex-lg-row gap-3">
							<a class="btn btn-success px-3 py-1 text-light d-flex align-items-center justify-content-center" href="{{ path('admin_session_new', {'id': category.id}) }}">
								<i class="bi bi-plus-circle m-1"></i>Prestation
							</a>
							<a class="btn btn-primary px-3 py-1 d-flex align-items-center justify-content-center" href="{{ path('admin_category_edit', {'id': category.id}) }}">
								<i class="bi bi-pencil-square m-1"></i>Modifier
							</a>
							{{ include('admin_category/_delete_form.html.twig') }}
						</div>
					</td>
				</tr>
				{% for session in category.sessions %}
					<tr>
						<td class="align-middle">{{ session.title }}</td>
						<td>
							<div class="d-flex justify-content-end flex-column flex-lg-row gap-3">
								<a class="btn btn-primary px-3 py-1 d-flex align-items-center justify-content-center" href="{{ path('admin_session_edit', {'id': session.id}) }}">
									<i class="bi bi-pencil-square m-1"></i>Modifier
								</a>
								{{ include('admin_session/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% endfor %}
			{% else %}
				<tr>
					<td colspan="9">Aucun service trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
