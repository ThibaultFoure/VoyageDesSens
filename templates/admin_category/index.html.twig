{% extends 'base-admin.html.twig' %}

{% block title %}
	{{ parent() }}
	- Administration catégories de services
{% endblock %}

{% block body %}
	<main class="container m-5">
		<h1 class="text-center mb-4">
			Administration catégories de prestations
		</h1>
		<table class="table table-hover bg-light">
			<thead class="bg-primary text-light">
				<tr>
					<th>Nom</th>
					<th>
						<div class="d-flex justify-content-end">
							<a class="btn btn-secondary px-3 py-1 text-light" href="{{ path('admin_category_new') }}">
								<i class="bi bi-plus-lg me-2"></i>Catégorie
							</a>
						</div>
					</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td class="align-middle">{{ category.title }}</td>
						<td>
							<div class="d-flex justify-content-end gap-3">
								<a class="btn btn-primary px-3 py-1" href="{{ path('admin_category_edit', {'id': category.id}) }}">
									<i class="bi bi-pencil-square"></i>
								</a>
								{{ include('admin_category/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="9">Aucune catgéorie trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>
{% endblock %}
