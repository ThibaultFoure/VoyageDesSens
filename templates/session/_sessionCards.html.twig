<h1 class="text-center text-primary sessionsTitle my-5" id="particular">Prestations</h1>
<div class="sessionsBody d-flex flex-column mb-5">
	{% for category in categories %}
		<div class="row d-flex justify-content-start mt-5">
			<h2 class="text-primary">{{category.title }}</h2>
			<p class="bg-light ms-3">{{ category.description|nl2br }}</p>
			<div class="card-body session-body body-particular py-md-3 px-md-4 p-lg-4">
				<ul class="list-unstyled accordion accordion-flush" id="accordionServices{{ category.id }}">
					{% for session in category.sessions %}
						<li class="accordion-item">
							<div class="accordion-header" id="heading{{ session.id }}">
								<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ session.id }}" aria-expanded="false" aria-controls="collapse{{ session.id }}">
									<i class="sessionIcon bi bi-arrow-right-circle-fill me-3 text-secondary"></i>
									{{ session.title }}
								</button>
							</div>
							<div id="collapse{{ session.id }}" class="accordion-collapse collapse" aria-labelledby="heading{{ session.id }}" data-bs-parent="#accordionServices{{ category.id }}">
								<div class="accordion-body">
									{{ session.description|nl2br }}
								</div>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	{% endfor %}
</div>
